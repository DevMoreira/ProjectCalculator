<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="Text_Views">
        <item name="android:layout_width">match_parent</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:gravity">bottom|end</item>
        <item name="android:layout_marginEnd">10dp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="View_Expression" parent="Text_Views">
        <item name="android:layout_height">100dp</item>
        <item name="android:textSize">40sp</item>
        <item name="android:ellipsize">start</item>
        <item name="android:singleLine">true</item>
    </style>

    <style name="View_Result" parent="Text_Views">
        <item name="android:layout_height">100dp</item>
        <item name="android:layout_marginBottom">20dp</item>
        <item name="android:textSize">30sp</item>
        <item name="android:ellipsize">end</item>
        <item name="android:maxLines">1</item>
    </style>

    <style name="Table_Buttons">
        <item name="android:textSize">18sp</item>
        <item name="android:layout_margin">2dp</item>
        <item name="android:layout_marginEnd">10dp</item>
        <item name="android:layout_marginStart">1dp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="Symbols_Buttons" parent="Table_Buttons">
        <item name="android:background">@drawable/buttons_symbols_clicked</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="Numbers_Buttons" parent="Table_Buttons">
        <item name="android:background">@drawable/buttons_numbers_clicked</item>
        <item name="android:textColor">@color/black</item>
    </style>

</resources>